{
  "name": "draw-in-the-air",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "type-check": "tsc -b --noEmit",
    "type-check:watch": "tsc -b --noEmit --watch",
    "lint": "eslint .",
    "preview": "vite preview",
    "prebuild": "npm run type-check",
    "validate": "npm run type-check && npm run lint",
    "tracking:test": "echo 'Note: Compile TypeScript first, then run: node scripts/tracking-smoke-test.js' || (tsc scripts/tracking-smoke-test.ts --outDir scripts --module esnext --target es2020 && node scripts/tracking-smoke-test.js)"
  },
  "dependencies": {
    "@mediapipe/tasks-vision": "^0.10.22-rc.20250304",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
